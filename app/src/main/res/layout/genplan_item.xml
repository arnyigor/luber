<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        <TextView
                android:id="@+id/tv_title"
                tools:text="Корпус 4.1"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_dateOfMovingIn"
                tools:text="Дата ввода:31 Мар 2018"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_title"
                android:layout_toEndOf="@+id/tv_title"/>
        <TextView
                android:id="@+id/tv_busy"
                tools:text="Занято:50"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_alignStart="@+id/tv_title"/>
        <TextView
                android:id="@+id/tv_free"
                tools:text="Свободно:50"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dateOfMovingIn" android:layout_toRightOf="@+id/tv_busy"
                android:layout_toEndOf="@+id/tv_busy"/>
        <TextView
                android:id="@+id/tv_finishing"
                tools:text="С Отделкой"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_dateOfMovingIn"
                android:layout_alignBottom="@+id/tv_dateOfMovingIn"
                android:layout_toRightOf="@+id/tv_dateOfMovingIn"
                android:layout_toEndOf="@+id/tv_dateOfMovingIn"/>
        <TextView
                android:id="@+id/tv_sold"
                tools:text="Продано:50"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dateOfMovingIn"
                android:layout_toRightOf="@+id/tv_free"
                android:layout_toEndOf="@+id/tv_free"/>
        <TextView
                android:id="@+id/tv_minprice_1"
                tools:text="1к:2.35млн"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_busy"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:id="@+id/tv_minprice_2"
                tools:text="2к:4.35млн"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_minprice_1"
                android:layout_alignBottom="@+id/tv_minprice_1"
                android:layout_toRightOf="@+id/tv_minprice_1"
                android:layout_toEndOf="@+id/tv_minprice_1"/>

        <TextView
                android:id="@+id/tv_minprice_3"
                tools:text="3к:6.35млн"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_minprice_2"
                android:layout_alignBottom="@+id/tv_minprice_2"
                android:layout_toRightOf="@+id/tv_minprice_2"
                android:layout_toEndOf="@+id/tv_minprice_2"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>