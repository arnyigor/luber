<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.arny.pik.ui.activities.KorpusViewActivity">
    <ProgressBar
            android:id="@+id/progress_draw"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Spinner
            android:layout_margin="5dp"
            android:visibility="gone"
            android:id="@+id/spin_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/flat_bg"
            android:layout_height="wrap_content">
        <ListView
                android:id="@+id/lv_floors"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_width="45dp"
                android:layout_height="wrap_content"/>
        <GridView
                android:visibility="gone"
                android:id="@+id/gridSection"
                android:background="@drawable/flat_bg"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lv_floors"
                android:layout_toEndOf="@+id/lv_floors"/>
    </RelativeLayout>
</LinearLayout>
